---
import Post1 from "./publicaciones/Post1.astro";
import Post2 from "./publicaciones/Post2.astro";
import Post3 from "./publicaciones/Post3.astro";
---

<section class="w-full bg-white py-20">
  <h2 class="text-4xl font-extrabold text-center text-neutral-800 mb-16">
    <span class="text-cyan-700">Seguinos</span> en Instagram
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 px-4 md:px-20">
    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden">
      <Post1 />
    </div>
    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden">
      <Post2 />
    </div>
    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden">
      <Post3 />
    </div>
  </div>
</section>
