---
import CardsViajeros from './CardsViajeros.astro';
---

<div class="relative z-20 py-12 md:py-22 bg-gradient-to-br from-cyan-700 via-cyan-700 to-cyan-900 rounded-b-[50px]">
    <div class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-30">
        <div class="flex flex-col items-center justify-center px-4 sm:px-8 md:px-16 py-10 md:py-16 rounded-3xl shadow-2xl bg-white/80 backdrop-blur-md border border-blue-100 animate-fade-in">

            <h2 class="text-4xl md:text-5xl font-extrabold text-center mb-4 text-cyan-900 tracking-tight drop-shadow-lg">Postales</h2>
            <div class="w-36 md:w-52 h-1 bg-gradient-to-r from-blue-400 via-cyan-400 to-green-400 mx-auto mb-8 rounded-full"></div>
            
            <CardsViajeros />

        </div>
    </div>
</div>

<style>
@keyframes fade-in {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in {
  animation: fade-in 1s cubic-bezier(0.4,0,0.2,1) both;
}
</style>
